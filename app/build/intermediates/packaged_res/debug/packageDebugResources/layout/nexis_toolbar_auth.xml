<?xml version="1.0" encoding="utf-8"?>

                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical" android:tag="layout/nexis_toolbar_auth_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nxs_back_btn_arrow" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/backBtn"
                android:layout_alignBottom="@+id/backBtn"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="7dp"
                android:layout_toEndOf="@+id/backBtn"
                android:fontFamily="@font/poppins_semi_bold"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                tools:text="Add User Detail" />

            <TextView
                android:id="@+id/saveActionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/nxs_toolbar_save_btn_disable"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.05"
                android:paddingHorizontal="@dimen/nxs_device_padding_for_card"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="13dp" />

        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

    </LinearLayout>

         